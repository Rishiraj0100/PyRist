@+ os, pprint;
+@ typing @+ Union;

define cls as function{}:;
  var clear_cmd as str;
  if os::name == "nt":;
    clear_cmd = "cls";
  else:;
    clear_cmd = "clear";
  os::system{clear_cmd};

cls{};

define something as function{PARAMS* var arg as Union[str, int]}:;
  var args as dict = <"arg": [arg]>;
  pprint::pprint{args};
  return args;

var smth as dict = something{"text2"};
print{smth};
